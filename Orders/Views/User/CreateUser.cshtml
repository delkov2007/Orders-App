@model Orders.Models.User.UserViewModel

@{
    ViewData["Title"] = "Create Image";
    Layout = "/Views/Shared/_Layout.cshtml";
}

@{

}

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">
@*enctype="multipart/form-data"*@

<div class="container">
    <br>
    <div class="row">
        <div class="card col-md-6 offset-md-3">
            <article class="card-body">
                <h4 class="card-title mb-4 mt-1">Sign up</h4>
                <hr />
                <form asp-action="createuser" method="post">
                    <div class="form-group">
                        <label for="username">Your username</label>
                        <input asp-for="@Model.Credentials.Username" name="@Model.Credentials.Username" id="username" class="form-control" placeholder="Username" type="text">
                    </div> <!-- form-group// -->
                    <div class="form-group">
                        <label for="password">Your password</label>
                        <input asp-for="@Model.Credentials.Password" name="@Model.Credentials.Password" id="password" class="form-control" placeholder="******" type="password">
                    </div> <!-- form-group// -->
                    <div class="form-group">
                        <label for="firstname">First Name</label>
                        <input asp-for="FirstName" name="FirstName" id="firstname" class="form-control" placeholder="First Name" type="text">
                    </div>
                    <div class="form-group">
                        <label for="lastname">Last Name</label>
                        <input asp-for="LastName" name="LastName" id="lastname" class="form-control" placeholder="Last Name" type="text">
                    </div>
                    <div class="form-group">
                        <label for="age">Your age</label>
                        <input asp-for="Age" name="Age" id="age" class="form-control" placeholder="Age" type="number">
                    </div>
                    <div class="form-group">
                        <label for="email">Your e-mail</label>
                        <input asp-for="Email" name="Email" id="email" class="form-control" placeholder="Your e-mail" type="email">
                    </div>
                    <div class="form-group">
                        <label for="avatar">Select Your Avatar Picture</label>
                        <input asp-for="UserPicture" name="UserPicture" id="avatar" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-dark btn-block" />
                    </div> <!-- form-group// -->
                </form>
            </article>
        </div>
    </div>
</div>


